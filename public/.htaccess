# Optimized .htaccess for React SPA on GoDaddy
# Simplified and focused on core functionality

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # GoDaddy-specific: Force HTTPS (optional but recommended)
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Handle trailing slashes - Remove them for non-directories
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} (.+)/$
  RewriteRule ^(.+)/$ /$1 [R=301,L]
  
  # CRITICAL: Don't rewrite files that actually exist (static assets)
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]
  
  # CRITICAL: Don't rewrite directories that actually exist
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # CRITICAL: Exclude ALL static file extensions
  RewriteCond %{REQUEST_URI} \.(js|jsx|ts|tsx|css|scss|sass|less|png|jpg|jpeg|gif|ico|svg|webp|avif|woff|woff2|ttf|eot|otf|map|json|xml|txt|pdf|mp4|webm|mp3|wav|ogg|zip|tar|gz|rar|wasm)$ [NC]
  RewriteRule ^ - [L]
  
  # CRITICAL: Don't rewrite common asset directories
  RewriteCond %{REQUEST_URI} ^/(static|assets|public|build|dist|img|images|fonts|css|js)/ [NC]
  RewriteRule ^ - [L]
  
  # CRITICAL: Don't rewrite service worker and manifest files
  RewriteCond %{REQUEST_URI} ^/(service-worker\.js|sw\.js|manifest\.json|robots\.txt|sitemap\.xml)$ [NC]
  RewriteRule ^ - [L]
  
  # For all other requests (React routes), serve index.html
  RewriteRule ^ /index.html [L]
</IfModule>

# Enhanced MIME types for better asset serving
<IfModule mod_mime.c>
  AddType application/javascript .js .jsx .ts .tsx
  AddType text/css .css .scss .sass .less
  AddType application/json .json
  AddType image/svg+xml .svg
  AddType image/webp .webp
  AddType image/avif .avif
  AddType font/woff .woff
  AddType font/woff2 .woff2
  AddType font/ttf .ttf
  AddType font/eot .eot
  AddType font/otf .otf
  AddType application/wasm .wasm
</IfModule>

# Optimized caching strategy
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Cache static assets aggressively (1 year)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/eot "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType application/wasm "access plus 1 year"
  
  # CRITICAL: Never cache HTML files (SPA updates)
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# CRITICAL: Prevent caching of index.html
<Files "index.html">
  <IfModule mod_headers.c>
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
    Header unset ETag
    Header set Vary "*"
  </IfModule>
</Files>

# Security headers
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options nosniff
  Header always set X-Frame-Options DENY
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# GoDaddy-specific optimizations
Options +FollowSymLinks -Indexes
DirectoryIndex index.html

# Handle 404 errors by serving index.html (SPA fallback)
ErrorDocument 404 /index.html